{
  "env": {
    "es2021": true,
    "node": true,
    "mocha": true
  },
  "extends": [
    "airbnb"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "function-paren-newline": ["off"],
    "import/prefer-default-export": ["off"],
    "max-len": ["error", { "code": 120 }],
    "newline-per-chained-call": ["off"],
    "no-console": ["off"],
    "no-nested-ternary": ["off"],
    "semi": ["error", "always"],
    "react/jsx-filename-extension": ["off"],
    "react/jsx-props-no-spreading": ["off"]
  }
}